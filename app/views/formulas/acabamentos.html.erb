<%= render "menu" %>

<div class="">
  <div class="row">
    <div class="col s12 m12 l12">
      <h4 style="margin-top: 40px;">Acabamentos</h4>
    </div>
  </div>
</div>

<div id="bases">
  <div class="row">
    <div class="card-panel">
      <table class="striped bordered">
        <thead>
          <tr>
              <th data-field="name">Fabricante</th>
              <th data-field="name">Descrição</th>
              <th data-field="name">Linha</th>
          </tr>
        </thead>

        <tbody>
          <% @tinta_acabamentos.each do |tinta_acabamento| %>

          <tr>
            <td><%= tinta_acabamento.tinta_produto.fabricante.name %></td>
            <td><%= tinta_acabamento.descricao %></td>
            <td><%= tinta_acabamento.tinta_produto.descricao %></td>
          </tr>

          <% end %>
        </tbody>
      </table>

    </div>
  </div>

</div>
