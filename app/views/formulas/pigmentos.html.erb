<%= render "menu" %>

<div class="">
  <div class="row">
    <div class="col s12 m12 l12">
      <h4 style="margin-top: 40px;">Pigmentos</h4>
    </div>
  </div>
</div>

<div id="bases">
  <div class="row">
    <div class="card-panel">
      <table class="striped bordered">
        <thead>
          <tr>
              <th data-field="name">Fabricante</th>
              <th data-field="id">Código</th>
              <th data-field="name">Descrição</th>
              <th data-field="name">Item</th>
              <th data-field="price">Preço</th>
              <!-- <th data-field="actions">Litro</th> -->
          </tr>
        </thead>

        <tbody>
          <% @tinta_pigmentos.each do |tinta_pigmento| %>

          <tr>
            <td><%= tinta_pigmento.fabricante.name %></td>
            <td><%= tinta_pigmento.codigo %></td>
            <td><%= tinta_pigmento.descricao %></td>
            <td><%= tinta_pigmento.tinta_pigmento_item.item.name %></td>
            <td><%= tinta_pigmento.tinta_pigmento_item.item.price %></td>
            <!-- <td><%#= number_to_currency rbase.price/946*1000 %></td> -->
          </tr>

          <% end %>
        </tbody>
      </table>

    </div>
  </div>

</div>
