<%= render "menu" %>

<div class="">
  <div class="row">
    <div class="col s12 m12 l12">
      <h4 style="margin-top: 40px;">Fórmulas</h4>
    </div>
  </div>
</div>

<div class="">
  <div class="row">
    <div class="card-panel">
      <div class="search-offers" style="margin-bottom: 20px;">
        <%= form_tag list_formulas_path, method: :get do %>
            <fieldset style="border: none; margin: 0; padding: 0;">
              <input name="keyword" id="icon_local" style="display: inline; width:500px;" type="search" placeholder="Filtrar fórmulas" value='<%= params[:keyword] %>'>
              <button class="btn" type="submit" name="action">
                Filtrar
              </button>
            </fieldset>
        <% end %>
      </div>

      <table class="striped bordered">
        <thead>
          <tr>
              <th data-field="name">Fabricante</th>
              <th data-field="name">Código</th>
              <th data-field="name">Cor</th>
              <th data-field="name">Acabamento</th>
              <th data-field="name">Base</th>
              <th data-field="name">Quantidade</th>
              <th data-field="c">C1</th>
              <th data-field="q">Q1</th>
              <th data-field="c">C2</th>
              <th data-field="q">Q2</th>
              <th data-field="c">C3</th>
              <th data-field="q">Q3</th>
              <th data-field="c">C4</th>
              <th data-field="q">Q4</th>
              <th data-field="c">C5</th>
              <th data-field="q">Q5</th>
              <th data-field="c">C6</th>
              <th data-field="q">Q6</th>
          </tr>
        </thead>

        <tbody>
          <% @tinta_cores.first(100).each do |tinta_cor| %>

          <tr>
            <td><%= tinta_cor.fabricante.name %></td>
            <td><%= tinta_cor.codigo %></td>
            <td><%= tinta_cor.descricao %></td>
            <td><%= tinta_cor.tinta_acabamento.descricao %></td>
            <td><%= tinta_cor.tinta_base.descricao %></td>
            <td><%= tinta_cor.quantidade %></td>
            <td><%= tinta_cor.read_formula[0].keys[0] if tinta_cor.read_formula[0] %></td>
            <td><%= tinta_cor.read_formula[0].values[0] if tinta_cor.read_formula[0] %></td>
            <td><%= tinta_cor.read_formula[1].keys[0] if tinta_cor.read_formula[1] %></td>
            <td><%= tinta_cor.read_formula[1].values[0] if tinta_cor.read_formula[1] %></td>
            <td><%= tinta_cor.read_formula[2].keys[0] if tinta_cor.read_formula[2] %></td>
            <td><%= tinta_cor.read_formula[2].values[0] if tinta_cor.read_formula[2] %></td>
            <td><%= tinta_cor.read_formula[3].keys[0] if tinta_cor.read_formula[3] %></td>
            <td><%= tinta_cor.read_formula[3].values[0] if tinta_cor.read_formula[3] %></td>
            <td><%= tinta_cor.read_formula[4].keys[0] if tinta_cor.read_formula[4] %></td>
            <td><%= tinta_cor.read_formula[4].values[0] if tinta_cor.read_formula[4] %></td>
            <td><%= tinta_cor.read_formula[5].keys[0] if tinta_cor.read_formula[5] %></td>
            <td><%= tinta_cor.read_formula[5].values[0] if tinta_cor.read_formula[5] %></td>
          </tr>

          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
