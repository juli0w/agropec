<div class="col s12 red darken-1 white-text" style="padding: 0;">
  <span style="padding: 5px;" class="left">
    <%= @client.name %>
    <br><%= @client.email %>
  </span>
  <a class="btn-large right green" onclick="$('.search').slideToggle(); $('.cart').slideToggle();">
    <i class="large material-icons">shopping_cart</i>
  </a>

  <%= link_to clear_client_path(@client), class: "btn-large right red darken-1" do %>
    <i class="large material-icons">refresh</i>
  <% end %>
</div>
<div class="col s12 no-space cart" style="display: none;">
  <%= render "cart/cart" %>
</div>

<div class="col s12 no-space search">
  <nav>
    <div class="nav-wrapper red lighten-2">
      <%= form_tag root_path, method: :get do %>
        <div class="input-field">
          <input id="search" type="search" style="text-transform: uppercase;" name="key" value='<%= params[:key] %>' required>
          <label class="label-icon" for="search"><i class="material-icons">search</i></label>
          <i class="material-icons">close</i>
        </div>
      <% end %>
    </div>
  </nav>

  <%= render "item/search" %>
</div>
